<Page
    x:Class="Collector_local_db.Add_debt"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Collector_local_db"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" MinWidth="1920" MinHeight="1080">


    <Grid Margin="0,0,0,-18" Background="#FFCFB9B9">
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="121" VerticalAlignment="Top" Width="1920" Background="#FF154710">
            <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="COLLECTOR" FontSize="96" Margin="0,-20,0,29" Foreground="#FFC9ACAC"/>
        </Border>
        <TextBox x:Name="titleBox" HorizontalAlignment="Left" Margin="141,213,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="56" Width="362" PlaceholderText="Title"/>

        <TextBox x:Name="nameBox" HorizontalAlignment="Left" Margin="141,315,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="56" Width="362" PlaceholderText="Name and surname"/>

        <TextBox x:Name="amountBox" HorizontalAlignment="Left" Margin="141,426,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="56" Width="282" PlaceholderText="Amount" InputScope="Digits" />


        <DatePicker x:Name="initialPicker" HorizontalAlignment="Left"  Margin="141,537,0,0" VerticalAlignment="Top" Width="362"/>


        <TextBlock x:Name="initialBlock" HorizontalAlignment="Left" Margin="101,512,0,0" TextWrapping="Wrap" Text="Date of  " VerticalAlignment="Top"/>


        <TextBox x:Name="descriptionBox" HorizontalAlignment="Left" Margin="639,213,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="56" Width="362" PlaceholderText="Description"/>

        <ToggleSwitch x:Name="prioritySwitch"  HorizontalAlignment="Left" Margin="847,315,0,0" VerticalAlignment="Top" Width="97"/>

        <TextBlock x:Name="priorityBlock" HorizontalAlignment="Left" Margin="639,320,0,0" TextWrapping="Wrap" Text="Set high priority ? " VerticalAlignment="Top"/>

        <Button x:Name="addButton" Click="Add_debt_click" Content="Add" HorizontalAlignment="Left" Margin="639,588,0,0" VerticalAlignment="Top" Height="56" Width="117"/>

        <Button x:Name="cancelButton" Click="Cancel_click" Content="Cancel" HorizontalAlignment="Left" Margin="799,588,0,0" VerticalAlignment="Top" Height="56" Width="117"/>

        <TextBlock x:Name="remeinderBlock" HorizontalAlignment="Left" Margin="101,597,0,0" TextWrapping="Wrap" Text="Remeinder Date  " VerticalAlignment="Top"/>


        <DatePicker x:Name="reminderPicker" HorizontalAlignment="Left" Margin="141,622,0,0" VerticalAlignment="Top" Width="362"/>
        
        <ComboBox x:Name="currencyBox" HorizontalAlignment="Left" Margin="439,426,0,0" VerticalAlignment="Top" Width="47" Height="56"/>

    </Grid>
</Page>
